{
  "manifest_version": 2,

  "name": "Tunisian Radios",
  "description": "Tunisian Radios extension for Google Chrome",
  "version": "1.0",

  "browser_action": {
    "default_icon": "img/icon-19.png",
    "default_popup": "templates/popup.html"
  },

  "icons" : {
    "16" : "img/icon-16.png",
    "48" : "img/icon-48.png",
    "128" : "img/icon-128.png"
  },

  "background": {
    "scripts": [
      "./js/jquery.min.js",
      "./js/bootstrap.min.js",
      "./js/background.js"
    ]
  },

  "permissions": ["background"]
}
